<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.android.tonight.addEvent"
        android:background="@drawable/stripped_background"
        android:padding="0dp"
        android:nestedScrollingEnabled="true">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/frameLayout">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/evPicture"
                android:layout_gravity="center"
                android:src="@drawable/brussels"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>
        </FrameLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edEvTitle"
            android:layout_below="@+id/frameLayout"
            android:layout_centerHorizontal="true"
            android:textColor="#ff000000"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:textSize="25dp"
            android:editable="true"
            android:enabled="true"
            android:hint="Nom de l&apos;évènement" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/edEvTitle"
            android:background="@android:color/darker_gray"
            android:id="@+id/lineSeparator1"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineSeparator1"
            android:id="@+id/firstRow"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/evIcDate"
                    android:src="@drawable/ic_event"
                    android:layout_gravity="left"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sam 21 juin 2015"
                    android:id="@+id/evStartDate"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/primary_text" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/evIcPrice"
                    android:src="@drawable/ic_action_creditcard"
                    android:padding="10dp"
                    android:layout_gravity="left"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FREE"
                    android:id="@+id/evPrice"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/primary_text" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstRow"
            android:id="@+id/secondRow"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/evIcTime"
                    android:src="@drawable/ic_access_time"
                    android:layout_gravity="left"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:00 - 00:00"
                    android:id="@+id/evStartTime"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/primary_text" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/evIcLocation"
                    android:src="@drawable/ic_location_on"
                    android:layout_gravity="left"
                    android:paddingLeft="13dp"
                    android:paddingTop="10dp"
                    android:paddingRight="13dp"
                    android:paddingBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brussels, BE"
                    android:id="@+id/evPosition"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/primary_text" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/secondRow"
            android:background="@android:color/darker_gray"
            android:id="@+id/lineSeparator2"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/secondRow"
            android:layout_centerHorizontal="true"
            android:id="@+id/ThirdRow">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:text="Description"
                android:id="@+id/evDesc"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:gravity="center_horizontal"
                android:textSize="16dp"
                android:textColor="#ff000000"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/evDescription"
                android:layout_weight="8"
                android:layout_gravity="bottom"
                android:textSize="20dp"
                android:textColor="#ff000000"
                android:padding="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S&apos;inscrire"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal"
                android:padding="0dp" />
        </LinearLayout>


    </RelativeLayout>
</ScrollView>