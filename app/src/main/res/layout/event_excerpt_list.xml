<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/eventLine"
    android:layout_width="fill_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:padding="0dp"
        android:nestedScrollingEnabled="true">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:id="@+id/eventPicture"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:transitionName="evTransitionPic" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:id="@+id/eventLayout"
            android:baselineAligned="false"
            >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp"
                android:layout_column="0">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="SoirÃ©e Disco Stout"
                    android:id="@+id/eventName"
                    android:layout_column="1"
                    android:textColor="#ffffffff"
                    android:shadowColor="#ff040404"/>

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp"
                android:layout_column="0">


                <TextView

                    android:layout_weight="4"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Sam. 21 Jan 2015"
                    android:id="@+id/eventDate"
                    android:layout_column="1"
                    android:textColor="#ffffffff"
                    android:shadowColor="#ff040404"
                    android:singleLine="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffffff"
                    android:text="4"
                    android:id="@+id/eventMaxPerson"
                    android:layout_column="2"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:shadowColor="#ff040404" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/imageView"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:layout_column="3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffffff"
                    android:text="FREE"
                    android:id="@+id/eventPrice"
                    android:layout_column="4"
                    android:textStyle="italic"
                    android:shadowColor="#ff040404" />


            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp"
                android:layout_column="0">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="20:00 - 00:00"
                    android:id="@+id/eventHour"
                    android:layout_column="1"
                    android:textColor="#ffffffff"
                    android:shadowColor="#ff040404" />
            </TableRow>


        </TableLayout>

    </RelativeLayout>

</LinearLayout>